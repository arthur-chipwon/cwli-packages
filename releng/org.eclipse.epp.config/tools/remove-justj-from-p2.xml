<?xml version="1.0" encoding="UTF-8"?>
<project default="remove-justj">
	<target name="remove-justj">
		<p2.remove.iu>
			 <repository location="file:/${basedir}/../../../archive/repository" />
			 <iu id="org.eclipse.justj.openjdk.hotspot.jre.full.linux.aarch64" />
			 <iu id="org.eclipse.justj.openjdk.hotspot.jre.full.linux.x86_64" />
			 <iu id="org.eclipse.justj.openjdk.hotspot.jre.full.macosx.aarch64" />
			 <iu id="org.eclipse.justj.openjdk.hotspot.jre.full.macosx.x86_64" />
			 <iu id="org.eclipse.justj.openjdk.hotspot.jre.full.win32.x86_64" />
		</p2.remove.iu>
		<!-- We need to run the remove multiple times in case there are multiple versions (e.g. Java 11 and Java 17 are installed)-->
		<p2.remove.iu>
			 <repository location="file:/${basedir}/../../../archive/repository" />
			 <iu id="org.eclipse.justj.openjdk.hotspot.jre.full.linux.aarch64" />
			 <iu id="org.eclipse.justj.openjdk.hotspot.jre.full.linux.x86_64" />
			 <iu id="org.eclipse.justj.openjdk.hotspot.jre.full.macosx.aarch64" />
			 <iu id="org.eclipse.justj.openjdk.hotspot.jre.full.macosx.x86_64" />
			 <iu id="org.eclipse.justj.openjdk.hotspot.jre.full.win32.x86_64" />
		</p2.remove.iu>
	</target>
</project>
